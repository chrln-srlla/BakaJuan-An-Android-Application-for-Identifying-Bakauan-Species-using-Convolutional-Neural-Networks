<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminCatalog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#263B1A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backToDashboard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dashboard_icon"
            android:contentDescription="Back to admin dashboard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Baka"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Juan"
            android:fontFamily="@font/montserratalternates_bold_font"
            android:textColor="#799A0B"
            android:textSize="30sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <!-- Logo -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="100dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@android:color/white">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/bakajuan_logo_circle"
                    android:contentDescription="Logo"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="40dp"/>

            <!-- Form Fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/catalog_box"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/admin"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="User Icon"/>

                    <EditText
                        android:id="@+id/newUsername"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Email"
                        android:textColorHint="#808080"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:textSize="13sp"
                        android:inputType="text"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/catalog_box"
                    android:layout_marginBottom="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/password"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Password Icon"/>

                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="New Password"
                        android:textColorHint="#808080"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:textSize="13sp"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/toggleNewPass"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@drawable/pass_show"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/catalog_box"
                    android:layout_marginBottom="50dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/current_password"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Password Icon"/>

                    <EditText
                        android:id="@+id/currentPassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Current Password"
                        android:textColorHint="#808080"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:textSize="13sp"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"/>

                    <ImageView
                        android:id="@+id/toggleCurrentPass"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:padding="4dp"
                        android:src="@drawable/pass_show"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveAccount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="SAVE"
                    android:textColor="#FFF3E5"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:background="@drawable/admin_nav"
                    android:layout_marginBottom="12dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addAccount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="CREATE ACCOUNT"
                    android:textColor="#FFF3E5"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:background="@drawable/dialog"
                    android:layout_marginBottom="12dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="DELETE ACCOUNT"
                    android:textColor="#FFF3E5"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:background="@drawable/delete_red"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminMangrove"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#263B1A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backToDashboard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dashboard_icon"
            android:contentDescription="Back to admin dashboard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Baka"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Juan"
            android:fontFamily="@font/montserratalternates_bold_font"
            android:textColor="#799A0B"
            android:textSize="30sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:fillViewport="true"
        android:paddingBottom="120dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:paddingBottom="10dp"
                android:elevation="3dp">

                <!-- Log Mangrove Data -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:elevation="2dp"
                    android:gravity="top"
                    android:layout_gravity="center">


                    <!-- Information -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="310dp"
                                android:layout_height="243dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/mangrovePreview"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/mangrove_preview"
                                    android:scaleType="centerCrop" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/captureMangrove"
                                        android:layout_width="130dp"
                                        android:layout_height="32dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@drawable/admin_nav"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:text="Capture Species "
                                        android:textAllCaps="false"
                                        android:textColor="#FFF3E5"
                                        android:textSize="12sp" />

                                    <androidx.appcompat.widget.AppCompatButton
                                        android:id="@+id/uploadMangrove"
                                        android:layout_width="130dp"
                                        android:layout_height="32dp"
                                        android:background="@drawable/admin_nav"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:text="Upload Species"
                                        android:textAllCaps="false"
                                        android:textColor="#FFF3E5"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Species ID"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/speciesID"
                                    android:layout_width="310dp"
                                    android:layout_height="wrap_content"
                                    android:minHeight="45dp"
                                    android:maxHeight="70dp"
                                    android:textColorHint="#799A0B"
                                    android:padding="12dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="12.8sp"
                                    android:background="@drawable/green_line"
                                    android:inputType="textMultiLine"
                                    android:gravity="top|start"
                                    android:scrollbars="vertical"
                                    android:layout_marginBottom="10dp"/>
                            </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Local Name"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/localName"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:minHeight="45dp"
                                    android:maxHeight="70dp"
                                    android:padding="12dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="12.8sp"
                                    android:background="@drawable/green_line"
                                    android:inputType="textMultiLine"
                                    android:gravity="top|start"
                                    android:scrollbars="vertical"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Scientific Name"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/scienticName"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:minHeight="45dp"
                                    android:maxHeight="70dp"
                                    android:padding="12dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="12.8sp"
                                    android:background="@drawable/green_line"
                                    android:inputType="textMultiLine"
                                    android:gravity="top|start"
                                    android:scrollbars="vertical"
                                    android:layout_marginBottom="10dp"/>
                        </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/mangroveDescription"
                                    android:layout_width="310dp"
                                    android:layout_height="100dp"
                                    android:minHeight="45dp"
                                    android:maxHeight="80dp"
                                    android:padding="12dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/montserratalternates_medium_font"
                                    android:textSize="12.8sp"
                                    android:background="@drawable/green_line"
                                    android:inputType="textMultiLine"
                                    android:gravity="top|start"
                                    android:scrollbars="vertical"
                                    android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_horizontal">

                                <!-- Zone -->
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Zone"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp" />

                                    <EditText
                                        android:id="@+id/mangroveZone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="45dp"
                                        android:background="@drawable/green_line"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="12.8sp"
                                        android:padding="12dp"
                                        android:gravity="top|start"
                                        android:inputType="textMultiLine"
                                        android:scrollbars="vertical" />
                                </LinearLayout>

                                <!-- Height -->
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Height"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp" />

                                    <EditText
                                        android:id="@+id/height"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="45dp"
                                        android:background="@drawable/green_line"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="12.8sp"
                                        android:padding="12dp"
                                        android:gravity="top|start"
                                        android:inputType="textMultiLine"
                                        android:scrollbars="vertical" />
                                </LinearLayout>

                                <!-- Width -->
                                <LinearLayout
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Width"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp" />

                                    <EditText
                                        android:id="@+id/width"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minHeight="45dp"
                                        android:background="@drawable/green_line"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/montserratalternates_medium_font"
                                        android:textSize="12.8sp"
                                        android:padding="12dp"
                                        android:gravity="top|start"
                                        android:inputType="textMultiLine"
                                        android:scrollbars="vertical" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Carbon Sequestered"
                                android:fontFamily="@font/montserratalternates_medium_font"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <EditText
                                android:id="@+id/carbonSequestered"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:minHeight="45dp"
                                android:maxHeight="70dp"
                                android:textColorHint="#D6D6D6"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/montserratalternates_medium_font"
                                android:textSize="12.8sp"
                                android:background="@drawable/green_line"
                                android:inputType="textMultiLine"
                                android:gravity="top|start"
                                android:scrollbars="vertical"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimated Age (months)"
                                android:fontFamily="@font/montserratalternates_medium_font"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:layout_marginBottom="8dp" />

                            <EditText
                                android:id="@+id/estimatedAge"
                                android:layout_width="310dp"
                                android:layout_height="45dp"
                                android:padding="12dp"
                                android:textColor="#D6D6D6"
                                android:fontFamily="@font/montserratalternates_medium_font"
                                android:textSize="12.8sp"
                                android:background="@drawable/green_line"
                                android:inputType="text" />
                        </LinearLayout>

                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="5dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/pickLocation"
                            android:layout_width="310dp"
                            android:layout_height="45dp"
                            android:text="Pick Location"
                            android:textColor="#FFF3E5"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:background="@drawable/dashboard"
                            android:layout_marginBottom="10dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/submitCatalog"
                            android:layout_width="310dp"
                            android:layout_height="45dp"
                            android:textColor="#FFF3E5"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:background="@drawable/admin_nav"
                            android:text="Submit to Catalog"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bottomNavContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Log Mangrove -->
            <LinearLayout
                android:id="@+id/logMangrove"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/dashboard"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/log_data"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Mangrove"
                    android:textColor="#FCEFCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:fontFamily="@font/montserratalternates_bold_font" />
            </LinearLayout>

            <!-- Plot Coordinates -->
            <LinearLayout
                android:id="@+id/plotCoordinates"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/admin_nav"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/map_coordinates"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map \nCoordinates"
                    android:textColor="#FCEFCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:fontFamily="@font/montserratalternates_bold_font" />
            </LinearLayout>

            <!-- View Catalog -->
            <LinearLayout
                android:id="@+id/viewCatalog"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/admin_nav"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/catalog_admin"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View\nCatalog"
                    android:textColor="#FCEFCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:fontFamily="@font/montserratalternates_bold_font" />
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/logOut"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/admin_nav"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/logout"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#FCEFCC"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:fontFamily="@font/montserratalternates_bold_font" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#263B1A"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backToDashboard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/dashboard_icon"
            android:contentDescription="Back to admin dashboard"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Baka"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Juan"
            android:fontFamily="@font/montserratalternates_bold_font"
            android:textColor="#799A0B"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/catalog_box"
            android:elevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="2dp"
                android:gravity="top"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <!-- Mangrove Coordinates -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>

                <!-- Info Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Species ID"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/speciesID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="45dp"
                    android:background="@drawable/green_line"
                    android:padding="12dp"
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:layout_marginBottom="10dp"/>

                <!-- Coordinates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Latitude"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserratalternates_medium_font"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"/>

                        <EditText
                            android:id="@+id/latitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="45dp"
                            android:background="@drawable/green_line"
                            android:padding="12dp"
                            android:fontFamily="@font/montserratalternates_medium_font"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:gravity="start|center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Longitude"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserratalternates_medium_font"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp" />

                        <EditText
                            android:id="@+id/longitude"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="45dp"
                            android:background="@drawable/green_line"
                            android:padding="12dp"
                            android:fontFamily="@font/montserratalternates_medium_font"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:gravity="start|center_vertical" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/saveCoordinates"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Save Coordinates"
                    android:textColor="#FFF3E5"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:background="@drawable/dashboard"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <!-- Log Mangrove -->
        <LinearLayout
            android:id="@+id/logMangrove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/log_data" />

            <TextView
                android:id="@+id/logSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Mangrove"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- Plot Coordinates -->
        <LinearLayout
            android:id="@+id/plotCoordinates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/dashboard"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline25"
            app:layout_constraintEnd_toStartOf="@id/guideline50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/map_coordinates" />

            <TextView
                android:id="@+id/mapSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map\nCoordinates"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- View Catalog -->
        <LinearLayout
            android:id="@+id/viewCatalog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toStartOf="@id/guideline75"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/catalog_admin" />

            <TextView
                android:id="@+id/catalogSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mangrove\nCatalog"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- Account Settings -->
        <LinearLayout
            android:id="@+id/accountSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/acc_settings" />

            <TextView
                android:id="@+id/accAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

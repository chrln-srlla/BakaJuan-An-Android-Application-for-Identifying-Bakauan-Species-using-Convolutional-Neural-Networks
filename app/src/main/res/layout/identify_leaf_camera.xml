<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/identifyLeafCamera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#263B1A"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:contentDescription="Back to mangrove catalog"/>

        <TextView
            android:id="@+id/Baka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baka"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="130dp"/>

        <TextView
            android:id="@+id/Juan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan"
            android:fontFamily="@font/montserratalternates_bold_font"
            android:textColor="#799A0B"
            android:textSize="30sp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <!-- Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:src="@drawable/camera_cam_gal">
                </ImageView>

                <ImageView
                    android:id="@+id/gallery"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:src="@drawable/camera_gal_gal">
                </ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tips on taking a picture:"
                android:fontFamily="@font/montserratalternates_bold_font"
                android:textColor="@color/black"
                android:layout_gravity="left"
                android:textSize="22sp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a clear photo of a single leaf at the right angle and distance to help BakaJuan App identify the mangrove species accurately."
                android:fontFamily="@font/montserratalternates_medium_font"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingRight="10dp"/>

            <ImageView
                android:layout_width="375dp"
                android:layout_height="6dp"
                android:src="@drawable/line"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:src="@drawable/root"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wrong_icon"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="35dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:src="@drawable/leaf"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/correct_icon"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan the leaf not the roots"
                android:fontFamily="@font/montserratalternates_bolditalic_font"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingBottom="10dp"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:src="@drawable/root"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/wrong_icon"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="35dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:src="@drawable/leaf"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/correct_icon"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Only include one species at a time"
                android:fontFamily="@font/montserratalternates_bolditalic_font"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
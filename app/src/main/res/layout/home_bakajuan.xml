<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeBakajuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#263B1A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleBaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:text="@string/Baka"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/titleJuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_bold_font"
                android:text="@string/Juan"
                android:textColor="#799A0B"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logoutUser"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/logout_guest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="1dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:text="Welcome, Guest!"
                        android:textColor="#263B1A"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/descriptionSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:text="Identify Mangrove Species with AI"
                        android:textColor="#263B1A"
                        android:textSize="13sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/welcomeIcon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bakajuan_tree" />
            </LinearLayout>

            <!-- Species List -->
            <HorizontalScrollView
                android:id="@+id/speciesScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/home">

                <LinearLayout
                    android:id="@+id/speciesListContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/catalog_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/babaeImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="Mangrove image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unround"
                            app:shapeAppearanceOverlay="@style/CircularImage" />

                        <TextView
                            android:id="@+id/babaeLocalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-5dp"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:gravity="center"
                            android:text="Bakhaw Babae"
                            android:textColor="#263B1A"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/catalogBabae"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="#263B1A"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:text="View All BB"
                            android:textAllCaps="false"
                            android:textColor="#FFF3E5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/catalog_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/butaButaImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="Mangrove image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unround"
                            app:shapeAppearanceOverlay="@style/CircularImage" />

                        <TextView
                            android:id="@+id/butaButaLocalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-5dp"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:gravity="center"
                            android:text="Buta-buta"
                            android:textColor="#263B1A"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/catalogButaButa"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="#263B1A"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:text="View All BTB"
                            android:textAllCaps="false"
                            android:textColor="#FFF3E5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/catalog_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/miyapiImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="Mangrove image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unround"
                            app:shapeAppearanceOverlay="@style/CircularImage" />

                        <TextView
                            android:id="@+id/miyapiLocalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-5dp"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:gravity="center"
                            android:text="Miyapi"
                            android:textColor="#263B1A"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/catalogMiyapi"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="#263B1A"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:text="View All MP"
                            android:textAllCaps="false"
                            android:textColor="#FFF3E5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/catalog_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/pagatpatImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="Mangrove image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unround"
                            app:shapeAppearanceOverlay="@style/CircularImage" />

                        <TextView
                            android:id="@+id/pagatpatLocalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-5dp"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:gravity="center"
                            android:text="Pagatpat"
                            android:textColor="#263B1A"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/catalogPagatpat"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="#263B1A"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:text="View All PG"
                            android:textAllCaps="false"
                            android:textColor="#FFF3E5"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/catalog_box"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/pototanImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:contentDescription="Mangrove image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/unround"
                            app:shapeAppearanceOverlay="@style/CircularImage" />

                        <TextView
                            android:id="@+id/pototanLocalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:layout_marginBottom="-5dp"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:gravity="center"
                            android:text="Pototan"
                            android:textColor="#263B1A"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/catalogPototan"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="#263B1A"
                            android:fontFamily="@font/montserratalternates_bold_font"
                            android:text="View All PT"
                            android:textAllCaps="false"
                            android:textColor="#FFF3E5"
                            android:textSize="11sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Getting Started Section -->
            <LinearLayout
                android:id="@+id/gettingStartedSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speciesScroll">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/getting_started" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:text="Getting Started"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gettingStartedSection" />

            <LinearLayout
                android:id="@+id/gS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/identify_mangrove" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:paddingLeft="12dp"
                        android:text="How to identify a leaf?"
                        android:textColor="#688356"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratalternates_mediumitalic_font"
                        android:paddingLeft="13dp"
                        android:text="Select. Capture. Identify."
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:paddingLeft="14dp"
                        android:text="Learn how to identify mangrove species correctly using AI."
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/identifyLeaf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:backgroundTint="#799A0B"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:text="Learn More"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:icon="@drawable/learn_more"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:iconTint="@null" />
                </LinearLayout>
            </LinearLayout>

            <!-- Find Mangrove Section -->
            <LinearLayout
                android:id="@+id/findMangroveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gS">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:text="Find a Mangrove Tree"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/line2"
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:src="@drawable/line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/findMangroveTitle" />

            <LinearLayout
                android:id="@+id/fM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/map_mangrove" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:paddingLeft="12dp"
                        android:text="How to find a mangrove tree?"
                        android:textColor="#688356"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/montserratalternates_mediumitalic_font"
                        android:paddingLeft="13dp"
                        android:text="Find. Capture. Identify."
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:paddingLeft="12dp"
                        android:text="Learn how to find mangrove easily."
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/learnMoreMangroveTree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:backgroundTint="#799A0B"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:text="Learn More"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:icon="@drawable/learn_more"
                        app:iconGravity="textEnd"
                        app:iconSize="22dp"
                        app:iconTint="@null" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/footer_nav_bg"
        android:clipChildren="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navHomeContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="-30dp"
                android:background="@drawable/home"
                android:contentDescription="@string/HomeImage"
                android:elevation="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:text="@string/home"
                android:textColor="#799A0B"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Geomap-->
        <LinearLayout
            android:id="@+id/navGeomapContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/navCatalogContainer"
            app:layout_constraintStart_toEndOf="@id/navHomeContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25">

            <ImageButton
                android:id="@+id/navGeomap"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/GeomapImage"
                android:scaleType="centerInside"
                android:src="@drawable/map"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:text="@string/geomap"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Catalog -->
        <LinearLayout
            android:id="@+id/navCatalogContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/navGeomapContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.25">

            <ImageButton
                android:id="@+id/navCatalog"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@null"
                android:contentDescription="@string/CatalogImage"
                android:scaleType="centerInside"
                android:src="@drawable/catalog"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:text="@string/catalog"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Capture/Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mangroveCaptureUpload"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="-18dp"
        android:backgroundTint="#799A0B"
        android:clickable="true"

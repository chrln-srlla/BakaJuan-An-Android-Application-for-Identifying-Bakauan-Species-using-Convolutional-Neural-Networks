<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/forgot_pass"
        android:elevation="8dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/reset_password"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email so that we can send you password reset link"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/catalog_box"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/admin"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="User Icon"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="e.g. email@bakajuan.com"
                    android:textColorHint="#808080"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendEmail"
                android:layout_width="280dp"
                android:layout_height="48dp"
                android:text="Send Email"
                android:textColor="#FFF3E5"
                android:textSize="15sp"
                android:fontFamily="@font/montserratalternates_bold_font"
                android:background="@drawable/dialog"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/backLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:src="@drawable/back_login"
                    android:layout_marginEnd="5dp"
                    android:contentDescription="User Icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back to Login "
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>

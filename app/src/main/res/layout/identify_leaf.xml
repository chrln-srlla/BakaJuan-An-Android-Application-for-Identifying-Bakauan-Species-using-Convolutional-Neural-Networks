<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/identifyLeaf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#263B1A"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/Baka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baka"
            android:fontFamily="@font/montserratalternates_medium_font"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:id="@+id/Juan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan"
            android:fontFamily="@font/montserratalternates_bold_font"
            android:textColor="#799A0B"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toggleBar"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/cameraToggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/camera_cam_gal"
            android:contentDescription="Camera"
            android:layout_marginEnd="-1dp" />

        <ImageView
            android:id="@+id/galleryToggle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/camera_gal_gal"
            android:contentDescription="Gallery"
            android:layout_marginEnd="-1dp"/>
    </LinearLayout>

    <!-- ViewFlipper -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_below="@id/toggleBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Camera View -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips on taking a picture:"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:paddingLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Take a clear photo of a single leaf at the right angle and distance to help BakaJuan App identify the mangrove species accurately."
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"/>

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="6dp"
                    android:src="@drawable/line"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/root"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/wrong_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/leaf"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/correct_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan the leaf not the roots"
                    android:fontFamily="@font/montserratalternates_bolditalic_font"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/root"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/wrong_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/leaf"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/correct_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Only include one species at a time"
                    android:fontFamily="@font/montserratalternates_bolditalic_font"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <!-- Tips List -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Make sure image is clear and focused with a proper angle and distance (20 cm) to help BakaJuan App identify the mangrove species accurately.\n
                        \n2. Only one mangrove species appears in the photo.\n
                        \n3. Leaf at the center with minimal background distractions.\n
                        \n4. Avoid blurry or low-resolution images for better recognition accuracy.\n
                        \n5. Ensure no overlapping leaves or species."
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:justificationMode="inter_word"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="20dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Gallery View -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips on getting a picture from gallery:"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a clear photo of a single leaf taken at a proper angle and distance to help BakaJuan App identify the mangrove species accurately."
                    android:fontFamily="@font/montserratalternates_medium_font"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:justificationMode="inter_word"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"/>

                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="6dp"
                    android:src="@drawable/line"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/root"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/wrong_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="16dp">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/leaf"
                            android:layout_marginBottom="8dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/correct_icon"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload image from your gallery"
                    android:fontFamily="@font/montserratalternates_bolditalic_font"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp" />

                <!-- Tips List -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Make sure image is clear and focused with a proper angle and distance (20 cm) to help BakaJuan App identify the mangrove species accurately.\n
                        \n2. Only one mangrove species appears in the photo.\n
                        \n3. Leaf at the center with minimal background distractions.\n
                        \n4. Avoid blurry or low-resolution images for better recognition accuracy.\n
                        \n5. Ensure no overlapping leaves or species."
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:justificationMode="inter_word"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingRight="20dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </ViewFlipper>
</RelativeLayout>
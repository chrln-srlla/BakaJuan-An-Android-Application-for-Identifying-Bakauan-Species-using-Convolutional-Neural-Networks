<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminDashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_color">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#263B1A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleBaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_medium_font"
                android:text="@string/Baka"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/titleJuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratalternates_bold_font"
                android:text="@string/Juan"
                android:textColor="#799A0B"
                android:textSize="30sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/logOut"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/logout_guest"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollviewAdmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Admin Section -->
            <LinearLayout
                android:id="@+id/admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adminTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTRIBUTOR"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserratalternates_bold_font"
                        android:textColor="#263B1A"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/descriptionSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserratalternates_medium_font"
                        android:text="Identify Mangrove Species with AI"
                        android:textColor="#263B1A"
                        android:textSize="13sp"
                        android:textStyle="italic"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/welcomeIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bakajuan_tree"/>
            </LinearLayout>

            <!-- Dashboard Panels -->
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/dashboardFlow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:flow_wrapMode="chain"
                app:flow_horizontalGap="10dp"
                app:flow_verticalGap="18dp"
                app:flow_maxElementsWrap="2"
                app:flow_horizontalStyle="spread_inside"
                app:constraint_referenced_ids="panel1,panel2,panel3,panel4"
                app:layout_constraintTop_toBottomOf="@id/admin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Panel 1 -->
            <LinearLayout
                android:id="@+id/panel1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/card_db_g"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="-2dp"
                    android:src="@drawable/admin_leaf" />

                <TextView
                    android:id="@+id/totalSpecies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#FCEFCC"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserratalternates_bold_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Species"
                    android:textColor="#FCEFCC"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <!-- Panel 2 -->
            <LinearLayout
                android:id="@+id/panel2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/card_db_lg"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="-2dp"
                    android:src="@drawable/admin_location" />

                <TextView
                    android:id="@+id/totalPlantedLocations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#FCEFCC"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserratalternates_bold_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Planting Zones"
                    android:gravity="center"
                    android:textColor="#FCEFCC"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <!-- Panel 3 -->
            <LinearLayout
                android:id="@+id/panel3"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/card_db_lg"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="-7dp"
                    android:src="@drawable/admin_carbon_dioxide" />

                <TextView
                    android:id="@+id/totalCarbonSequestered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#FCEFCC"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserratalternates_bold_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Carbon Sequestered"
                    android:gravity="center"
                    android:textColor="#FCEFCC"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:layout_marginBottom="7dp"/>
            </LinearLayout>

            <!-- Panel 4 -->
            <LinearLayout
                android:id="@+id/panel4"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/card_db_g"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="-5dp"
                    android:src="@drawable/admin_map" />

                <TextView
                    android:id="@+id/zonesMapped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textColor="#FCEFCC"
                    android:textSize="30sp"
                    android:fontFamily="@font/montserratalternates_bold_font" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zones Mapped"
                    android:textColor="#FCEFCC"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <!-- Catalog Section -->
            <LinearLayout
                android:id="@+id/catalogSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dashboardFlow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/catalog_ad"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catalogued Mangroves"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:src="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/catalogSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Species List -->
            <LinearLayout
                android:id="@+id/speciesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/catalog_box"
                app:layout_constraintTop_toBottomOf="@id/catalogSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Horizontal Scroll -->
                <HorizontalScrollView
                    android:id="@+id/speciesScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/speciesListContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/mangroveImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/unround"
                                app:shapeAppearanceOverlay="@style/CircularImage"
                                android:layout_gravity="center"
                                android:layout_margin="8dp" />

                            <TextView
                                android:id="@+id/speciesID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BB01"
                                android:textColor="#263B1A"
                                android:textSize="14sp"
                                android:fontFamily="@font/montserratalternates_bold_font"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/localName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakhaw Babae"
                                android:textColor="#799A0B"
                                android:textSize="11sp"
                                android:fontFamily="@font/montserratalternates_bold_font"
                                android:gravity="center"
                                android:layout_marginTop="-3dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/catalog"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="7dp                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        "
                    android:backgroundTint="#263B1A"
                    android:text="View Catalog"
                    android:textColor="#FFF3E5"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:fontFamily="@font/montserratalternates_bold_font"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_goneMarginTop="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/speciesContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/geomap_ad"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mapped Species"
                    android:fontFamily="@font/montserratalternates_bold_font"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="390dp"
                android:layout_height="1dp"
                android:src="@drawable/line"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toBottomOf="@id/mapSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Map Snapshot -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mapCard"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/mapSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:id="@+id/mapContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:background="@android:color/white">

                    <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/btnToggleMapSize"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/expand_more"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="@id/mapCard"
                app:layout_constraintEnd_toEndOf="@id/mapCard" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <!-- Log Mangrove -->
        <LinearLayout
            android:id="@+id/logMangrove"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/log_data" />

            <TextView
                android:id="@+id/logSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Mangrove"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- Plot Coordinates -->
        <LinearLayout
            android:id="@+id/plotCoordinates"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline25"
            app:layout_constraintEnd_toStartOf="@id/guideline50"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/map_coordinates" />

            <TextView
                android:id="@+id/mapSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map\nCoordinates"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- View Catalog -->
        <LinearLayout
            android:id="@+id/viewCatalog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline50"
            app:layout_constraintEnd_toStartOf="@id/guideline75"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/catalog_admin" />

            <TextView
                android:id="@+id/catalogSpecies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mangrove\nCatalog"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>

        <!-- Account Settings -->
        <LinearLayout
            android:id="@+id/accountSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/admin_nav"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/guideline75"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/acc_settings" />

            <TextView
                android:id="@+id/accAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textColor="#FCEFCC"
                android:textSize="10sp"
                android:gravity="center"
                android:fontFamily="@font/montserratalternates_bold_font" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Catalog Overlay -->
    <FrameLayout
        android:id="@+id/catalogOverlay"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="30dp"
        android:elevation="4dp"
        android:background="@drawable/catalog_box"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
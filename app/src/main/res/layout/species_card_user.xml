<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/species_bg_card"
    android:padding="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mangroveImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/unround"
        android:contentDescription="Mangrove image"
        app:shapeAppearanceOverlay="@style/CircularImage"
        android:layout_gravity="center"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/speciesID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BB01"
        android:textColor="#263B1A"
        android:textSize="15sp"
        android:fontFamily="@font/montserratalternates_bold_font"
        android:gravity="center"/>

    <TextView
        android:id="@+id/localName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bakhaw Babae"
        android:textColor="#799A0B"
        android:textSize="13sp"
        android:fontFamily="@font/montserratalternates_bold_font"
        android:gravity="center"
        android:layout_marginTop="-3dp"
        android:layout_marginBottom="-5dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#263B1A"
        android:text="View Species"
        android:textColor="#FFF3E5"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:fontFamily="@font/montserratalternates_medium_font" />
</LinearLayout>